<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".ui.lounge.LoungeFragment"
    android:paddingHorizontal="30dp"
    android:background="@color/white">
    <!-- tools:context 이거 삭제? -->

    <!-- 전체 상단 영역 -->
    <LinearLayout
        android:id="@+id/loungeHeaderLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- 상단 타이틀 & 선물 아이콘 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/tv_friend_nickname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="[닉네임]'s Lounge"
                android:textAppearance="@style/TextAppearance.App.Bold.24sp" />

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1"/>
            <ImageButton
                android:id="@+id/btn_exit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:background="@null"
                android:src="@drawable/ic_exit"
                android:contentDescription="선물 아이콘" />
        </LinearLayout>

        <TextView
            android:id="@+id/loungeSubText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="@string/info_youtube_api"
            android:textColor="@color/text4"
            android:textAppearance="@style/TextAppearance.App.Regular.8sp"
            />

        <!-- 탭 버튼 -->
        <LinearLayout
            android:id="@+id/personal_list_select_buttons"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:orientation="horizontal"
            android:gravity="start" >


            <TextView
                android:id="@+id/personal_tv_collection_list"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingVertical="5dp"
                android:paddingHorizontal="12dp"
                android:background="@drawable/round_button_selector"
                android:backgroundTint="@color/main"
                android:text="컬렉션별 목록"
                android:textColor="@color/white"
                android:clickable="true"
                android:focusable="true"
                style="@style/TextAppearance.App.Medium.14sp" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/progressbar"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:visibility="gone"
        android:gravity="center"
        android:background="@color/white"
        android:clickable="true"
        android:focusable="true"
        android:translationZ="1dp">
        <ProgressBar
            style="?android:attr/progressBarStyle"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:translationZ="1dp"
            android:indeterminateTint="@color/main"/>
    </LinearLayout>


    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/personal_lounge_content_container"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        tools:layout="@layout/fragment_bookmark_list"
        app:layout_constraintTop_toBottomOf="@+id/loungeHeaderLayout"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />



</androidx.constraintlayout.widget.ConstraintLayout>
