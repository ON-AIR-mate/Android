<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="30dp"
    android:paddingHorizontal="13dp"
    android:paddingVertical="24dp"
    android:orientation="vertical"
    android:background="@drawable/bg_dialog"
    android:elevation="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >
            <TextView
                android:id="@+id/titleText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="[영상 제목]"
                android:textAppearance="@style/TextAppearance.App.Medium.14sp" />

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1"/>

            <ImageView
                android:id="@+id/iv_close"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:src="@drawable/btn_close" />

        </LinearLayout>
        <TextView
            android:id="@+id/timeText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            android:text="16:23 ~~~~"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/main"
            android:textAppearance="@style/TextAppearance.App.Medium.14sp" />

        <TextView
            android:id="@+id/questionText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="어디서부터 감상하시겠습니까?"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.App.Medium.14sp"
            android:paddingBottom="20dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:gravity="center"
            android:orientation="horizontal">


            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnFromBookmark"
                android:layout_width="100dp"
                android:layout_height="20dp"
                android:layout_marginEnd="10dp"
                android:background="@drawable/background_box_5dp"
                android:backgroundTint="@color/main"
                android:text="북마크 시간부터"
                android:textAppearance="@style/TextAppearance.App.SemiBold.12sp"
                android:textColor="@color/white" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnFromStart"
                android:layout_width="100dp"
                android:layout_height="20dp"
                android:background="@drawable/background_box_5dp"
                android:backgroundTint="@color/disable"
                android:text="영상 처음부터"
                android:textAppearance="@style/TextAppearance.App.SemiBold.12sp"
                android:textColor="@color/white" />

        </LinearLayout>


    </LinearLayout>
</LinearLayout>
