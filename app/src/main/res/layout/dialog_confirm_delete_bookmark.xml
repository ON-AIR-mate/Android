<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="180dp"
    android:layout_marginHorizontal="30dp"
    android:paddingHorizontal="13dp"
    android:paddingVertical="24dp"
    android:orientation="vertical"
    android:background="@drawable/bg_dialog"
    android:elevation="10dp">



        <TextView
            android:id="@+id/titleText"
            android:text="[방 제목]"
            android:layout_gravity="center_horizontal"
            android:textAppearance="@style/TextAppearance.App.SemiBold.20sp"
            android:layout_width="wrap_content"
            android:layout_height="24dp"/>

        <TextView
            android:id="@+id/videotitleText"
            android:text="영상제목"
            android:layout_gravity="center_horizontal"
            android:textAppearance="@style/TextAppearance.App.Regular.14sp"
            android:layout_width="wrap_content"
            android:layout_height="17dp"/>
        <TextView
            android:id="@+id/timeText"
            android:text="16:23 ~~~~"
            android:layout_marginTop="18dp"
            android:layout_gravity="center_horizontal"
            android:textAppearance="@style/TextAppearance.App.Medium.14sp"
            android:textColor="@color/main"
            android:layout_width="wrap_content"
            android:layout_height="17dp"/>

        <TextView
            android:id="@+id/messageText"
            android:text="해당 북마크를 삭제하시겠습니까?"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.App.Medium.14sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="20dp"
             />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnDelete"
            android:layout_width="100dp"
            android:layout_height="20dp"
            android:background="@drawable/background_box_5dp"
            android:backgroundTint="@color/main"
            android:text="삭제"
            android:textColor="@color/white"
            android:textAppearance="@style/TextAppearance.App.SemiBold.12sp"
            android:layout_marginEnd="10dp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnCancel"
            android:layout_width="100dp"
            android:layout_height="20dp"
            android:background="@drawable/background_box_5dp"
            android:backgroundTint="@color/disable"
            android:text="취소"
            android:textColor="@color/white"
            android:textAppearance="@style/TextAppearance.App.SemiBold.12sp" />

    </LinearLayout>
</LinearLayout>