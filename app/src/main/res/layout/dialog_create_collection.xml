<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="30dp"
    android:paddingHorizontal="13dp"
    android:paddingVertical="24dp"
    android:orientation="vertical"
    android:background="@drawable/bg_dialog"
    android:elevation="0dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="35dp" >
        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="17dp"
            android:text="컬렉션 생성"
            android:textAppearance="@style/TextAppearance.App.Medium.14sp"
            android:layout_marginBottom="18dp"/>

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"/>

        <ImageView
            android:id="@+id/ivClose"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:src="@drawable/btn_close"/>

    </LinearLayout>

    <EditText
        android:id="@+id/etNewTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="@style/TextAppearance.App.Regular.12sp"
        android:hint="컬렉션 제목을 입력하세요. (3~20자)"
        android:maxLines="1"
        android:textColorHint="@color/black"
        android:background="@drawable/background_input_text"
        android:paddingVertical="5dp"
        android:paddingStart="5dp" />

    <TextView
        android:id="@+id/tv_title_length_error_msg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="방 제목은 3자 이상 20자 이하로 입력해야 해요."
        android:layout_marginTop="2dp"
        android:layout_marginStart="2dp"
        android:textColor="@color/main"
        android:visibility="invisible"
        android:textAppearance="@style/TextAppearance.App.Medium.12sp" />

    <LinearLayout
        android:id="@+id/rowPrivacy"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_marginBottom="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="공개범위"
            android:textAppearance="@style/TextAppearance.App.Medium.12sp"
            android:layout_marginBottom="10dp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"/>


            <TextView
                android:id="@+id/tvPrivacy"
                android:layout_width="wrap_content"
                android:layout_height="17dp"
                android:layout_marginBottom="18dp"
                android:text="비공개"
                android:textAppearance="@style/TextAppearance.App.Medium.12sp"
                android:textColor="@color/main" />

        <ImageView
            android:id="@+id/ivPrivacyDropdown"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:src="@drawable/ic_dropdown"/>
        </LinearLayout>
    </LinearLayout>


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnChangeTitle"
        android:layout_width="150dp"
        android:layout_height="22dp"
        android:background="@drawable/background_box_5dp"
        android:backgroundTint="@color/main"
        android:text="컬렉션 생성하기"
        android:textAppearance="@style/TextAppearance.App.SemiBold.12sp"
        android:textColor="@color/white"
        android:layout_gravity="center"
        android:layout_marginEnd="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</LinearLayout>
