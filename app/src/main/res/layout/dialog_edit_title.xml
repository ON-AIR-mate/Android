<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginHorizontal="30dp"
    android:paddingHorizontal="13dp"
    android:paddingVertical="24dp"
    android:orientation="vertical"
    android:background="@drawable/bg_dialog"
    android:elevation="0dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="18dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="컬렉션 제목"
            android:textAppearance="@style/TextAppearance.App.Medium.14sp"
            />

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"/>

        <ImageView
            android:id="@+id/iv_close"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:src="@drawable/btn_close" />

    </LinearLayout>

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/et_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/background_input_text"
        tools:text="힐링모먼트"
        android:hint="@string/collection_title_hint"
        android:textAppearance="@style/TextAppearance.App.Regular.12sp"
        android:paddingVertical="5dp"
        android:layout_marginBottom="2dp"
        android:paddingHorizontal="5dp"/>

    <TextView
        android:id="@+id/tv_title_length_error_msg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/collection_title_length_error"
        android:layout_marginTop="2dp"
        android:layout_marginStart="2dp"
        android:textColor="@color/main"
        android:visibility="invisible"
        android:layout_marginVertical="3dp"
        android:textAppearance="@style/TextAppearance.App.Medium.12sp" />

    <TextView
        android:id="@+id/btn_change_title"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:background="@drawable/background_box_5dp"
        android:backgroundTint="@color/main"
        android:text="제목 변경하기"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.App.SemiBold.12sp"
        android:textColor="@color/white"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:paddingVertical="3dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</LinearLayout>

