<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="30dp"
    android:paddingHorizontal="13dp"
    android:paddingVertical="24dp"
    android:orientation="vertical"
    android:background="@drawable/bg_dialog"
    android:elevation="10dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="20dp" >

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1"/>

            <ImageView
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:src="@drawable/btn_close" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/rvCollections"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <TextView
                android:id="@+id/tvCountBadge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="6dp"
                android:background="@drawable/bg_count_badge"
                android:paddingHorizontal="6dp"
                android:paddingVertical="2dp"
                android:text=""
                android:textColor="@android:color/white"
                android:textAppearance="@style/TextAppearance.App.SemiBold.12sp"
                android:clickable="true"
                android:focusable="true"
                android:contentDescription="@string/bookmark_count_badge"/>

            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="웃긴 장면"
                android:textAppearance="@style/TextAppearance.App.SemiBold.20sp" />

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1"/>

            <ImageView
                android:id="@+id/btn_collection_move"
                android:layout_width="18dp"
                android:layout_height="16.5dp"
                android:src="@drawable/ic_collectionmove"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="20dp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnChangeTitle"
            android:layout_width="150dp"
            android:layout_height="22dp"
            android:background="@drawable/background_box_5dp"
            android:backgroundTint="@color/main"
            android:text="컬렉션 이동하기"
            android:textAppearance="@style/TextAppearance.App.SemiBold.12sp"
            android:textColor="@color/white"
            android:layout_gravity="center"
            android:layout_marginEnd="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" />
    </LinearLayout>
</LinearLayout>
