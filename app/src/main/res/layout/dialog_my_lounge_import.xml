<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="30dp"
    android:paddingHorizontal="13dp"
    android:paddingVertical="24dp"
    android:orientation="vertical"
    android:background="@drawable/bg_dialog"
    android:elevation="10dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
        <TextView
            android:id="@+id/myloungeimport"
            android:text="내 라운지에 가져오기"
            android:textAppearance="@style/TextAppearance.App.Medium.14sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"/>

        <ImageView
            android:id="@+id/iv_close"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:src="@drawable/btn_close" />
    </LinearLayout>

    <TextView
        android:id="@+id/timeText"
        android:text="16:23 ~~~~"
        android:layout_marginTop="18dp"
        android:layout_gravity="center_horizontal"
        android:textAppearance="@style/TextAppearance.App.Medium.14sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/messageText"
        android:text="해당 북마크를 가져오시겠습니까?"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.App.Medium.14sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="20dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnDelete"
            android:layout_width="100dp"
            android:layout_height="20dp"
            android:background="@drawable/background_box_5dp"
            android:backgroundTint="@color/main"
            android:text="삭제"
            android:textColor="@color/white"
            android:textAppearance="@style/TextAppearance.App.SemiBold.12sp"
            android:layout_marginEnd="10dp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnCancel"
            android:layout_width="100dp"
            android:layout_height="20dp"
            android:background="@drawable/background_box_5dp"
            android:backgroundTint="@color/disable"
            android:text="취소"
            android:textColor="@color/white"
            android:textAppearance="@style/TextAppearance.App.SemiBold.12sp" />

    </LinearLayout>
</LinearLayout>