<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:paddingHorizontal="20dp"
    android:paddingBottom="24dp"
    android:orientation="vertical"
    android:background="@drawable/background_box_5dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="14dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="내 라운지에 가져오기"
            android:textAppearance="@style/TextAppearance.App.Medium.14sp"/>

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"/>

        <ImageView
            android:id="@+id/iv_close"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:src="@drawable/btn_close"/>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_gravity="center">

        <TextView
            android:id="@+id/tv_collection_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            tools:text="[닉네임]의 웃긴 장면"
            android:maxLines="1"
            android:ellipsize="end"
            android:textAppearance="@style/TextAppearance.App.SemiBold.20sp" />

    </LinearLayout>



    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="해당 컬렉션을 가져오시겠습니까?"
        android:textAlignment="center"
        android:layout_marginTop="5dp"
        android:textAppearance="@style/TextAppearance.App.Medium.14sp"
        android:layout_marginBottom="20dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <TextView
            android:id="@+id/btn_import"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:background="@drawable/background_box_5dp"
            android:backgroundTint="@color/main"
            android:text="확인"
            android:textColor="@color/white"
            android:gravity="center"
            android:paddingVertical="3dp"
            android:textAppearance="@style/TextAppearance.App.SemiBold.12sp"
            android:layout_marginEnd="10dp" />

        <TextView
            android:id="@+id/btn_cancel"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:background="@drawable/background_box_5dp"
            android:backgroundTint="@color/disable"
            android:text="취소"
            android:textColor="@color/white"
            android:gravity="center"
            android:paddingVertical="3dp"
            android:textAppearance="@style/TextAppearance.App.SemiBold.12sp" />

    </LinearLayout>
</LinearLayout>
