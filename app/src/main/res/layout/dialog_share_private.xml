<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="30dp"
    android:paddingHorizontal="13dp"
    android:paddingVertical="24dp"
    android:orientation="vertical"
    android:background="@drawable/bg_dialog"
    android:elevation="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="24dp" >
    <TextView
        android:id="@+id/tvCountBadge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="6dp"
        android:background="@drawable/bg_count_badge"
        android:clickable="true"
        android:focusable="true"
        android:paddingHorizontal="6dp"
        android:paddingVertical="2dp"
        android:text="45"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.App.SemiBold.12sp"
        android:textColor="@android:color/white" />
    <TextView
        android:id="@+id/tvDialogTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="힐링 모먼트"
        android:textAppearance="@style/TextAppearance.App.SemiBold.20sp"
        />

    </LinearLayout>

    <TextView
        android:id="@+id/tvCreated"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="생성일 : 2025.03.25"
        android:textAppearance="@style/TextAppearance.App.Regular.12sp"/>

    <TextView
        android:id="@+id/tvUpdated"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="마지막 수정일 : 2025.06.30"
        android:textAppearance="@style/TextAppearance.App.Regular.12sp"/>

    <TextView
        android:id="@+id/tvNotice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="공유하려면 공개 범위를 변경해주세요"
        android:textAppearance="@style/TextAppearance.App.Medium.14sp"
        android:textAlignment="center"
        android:layout_marginTop="20dp"
        />
    <TextView
        android:id="@+id/openScopeNotice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="현재 공개범위 : 나만 보기"
        android:textAppearance="@style/TextAppearance.App.Regular.12sp"
        android:textAlignment="center"
        android:paddingBottom="20dp"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnChangeTitle"
        android:layout_width="150dp"
        android:layout_height="22dp"
        android:background="@drawable/background_box_5dp"
        android:backgroundTint="@color/main"
        android:text="확인"
        android:textAppearance="@style/TextAppearance.App.SemiBold.12sp"
        android:textColor="@color/white"
        android:layout_gravity="center"
        android:layout_marginEnd="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</LinearLayout>
