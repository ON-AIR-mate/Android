<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:minWidth="300dp"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/background_box_5dp"
    android:padding="16dp">
    <TextView
        android:id="@+id/tv_popup_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="영상 시청이 종료되었습니다.\n방이 자동으로 종료됩니다."
        android:textAppearance="@style/TextAppearance.App.Medium.14sp"
        android:gravity="center"
        android:padding="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/btn_left"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:background="@drawable/background_box_5dp"
        android:backgroundTint="@color/main"
        android:text="퇴장하기"
        android:gravity="center"
        android:textAppearance="@style/TextAppearance.App.SemiBold.12sp"
        android:textColor="@color/white"
        android:layout_marginTop="20dp"
        android:paddingVertical="2dp"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintTop_toBottomOf="@id/tv_popup_text"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />



</androidx.constraintlayout.widget.ConstraintLayout>