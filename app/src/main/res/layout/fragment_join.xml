<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/scrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="umc.OnAirMate.ui.join.JoinFragment">

    <LinearLayout
        android:id="@+id/linearLayoutRoot"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="24dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp">

            <ImageView
                android:id="@+id/btnClose"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/btn_close"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true" />

            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ON AIR mate"
                android:textColor="@color/main"
                android:textSize="28sp"
                android:textStyle="bold"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true" />
        </RelativeLayout>

        <!--
        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ON AIR mate"
            android:textSize="28sp"
            android:textStyle="bold"
            android:textColor="@color/main"
            android:layout_marginBottom="12dp" />
-->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="회원가입을 위한 약관에 동의해주세요"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="10dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="이메일로 인증이 가능합니다."
            android:textColor="@color/text10"
            android:textSize="15sp"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"/>

        <!-- 약관 동의 전체 영역 -->
        <LinearLayout
            android:id="@+id/termsContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:layout_marginTop="20dp">

            <!-- 전체 동의 -->
            <CheckBox
                android:id="@+id/allAgreeCheckBox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="서비스 약관 전체 동의"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:layout_marginBottom="10dp"
                android:buttonTint="@color/text5" />

            <!--
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/line" />
                -->

            <!-- 서비스 이용약관 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <CheckBox
                    android:id="@+id/serviceCheckBox"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="[필수] 온에어메이트 서비스 이용약관"
                    android:textColor="@color/text4"
                    android:textSize="12sp"
                    android:buttonTint="@color/text5" />

                <ImageView
                    android:id="@+id/arrowService"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/arrow"
                    android:contentDescription="서비스 약관 보기" />
            </LinearLayout>

            <!-- 개인정보 동의 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <CheckBox
                    android:id="@+id/privacyCheckBox"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="[필수] 개인정보 수집 및 이용"
                    android:textColor="@color/text4"
                    android:textSize="12sp"
                    android:buttonTint="@color/text5" />

                <ImageView
                    android:id="@+id/arrowPrivacy"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/arrow"
                    android:contentDescription="개인정보 약관 보기" />
            </LinearLayout>

            <!-- 개인정보 처리방침 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <CheckBox
                    android:id="@+id/privacyProcessCheckBox"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="[필수] 개인정보 처리방침"
                    android:textColor="@color/text4"
                    android:textSize="12sp"
                    android:buttonTint="@color/text5" />

                <ImageView
                    android:id="@+id/arrowProcessing"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/arrow"
                    android:contentDescription="개인정보 처리방침 보기" />
            </LinearLayout>

            <!-- 마케팅 수신동의 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <CheckBox
                    android:id="@+id/marketingCheckBox"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="[선택] 마케팅 수신동의"
                    android:textColor="@color/text4"
                    android:textSize="12sp"
                    android:buttonTint="@color/text5" />

                <ImageView
                    android:id="@+id/arrowMarketing"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/arrow"
                    android:contentDescription="마케팅 약관 보기" />
            </LinearLayout>

            <!-- 이벤트/프로모션 참여 동의 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <CheckBox
                    android:id="@+id/eventCheckBox"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="[선택] 이벤트/프로모션 참여 동의"
                    android:textColor="@color/text4"
                    android:textSize="12sp"
                    android:buttonTint="@color/text5" />

                <ImageView
                    android:id="@+id/arrowEvent"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/arrow"
                    android:contentDescription="이벤트/프로모션 참여 약관 보기" />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="150dp">

            <Button
                android:id="@+id/join_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="완료" />

        </LinearLayout>
    </LinearLayout>
</ScrollView>
