<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingHorizontal="30dp">

    <RelativeLayout
        android:id="@+id/layout_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/btn_close"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:padding="3dp"
            android:src="@drawable/btn_close"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
           />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ON AIR mate"
            android:textColor="@color/main"
            android:textAppearance="@style/TextAppearance.App.Bold.26sp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true" />
    </RelativeLayout>


        <TextView
            android:id="@+id/tv_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="회원가입을 위한 약관에 동의해주세요."
            android:textAppearance="@style/TextAppearance.App.SemiBold.18sp"
            android:textColor="@color/black"
            android:layout_marginTop="45dp"
            app:layout_constraintTop_toBottomOf="@id/layout_header"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/tv_info2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="이메일로 인증이 가능합니다."
            android:textColor="@color/text4"
            android:textAppearance="@style/TextAppearance.App.Medium.10sp"
            android:layout_marginTop="5dp"
            app:layout_constraintTop_toBottomOf="@id/tv_info"
            app:layout_constraintStart_toStartOf="parent"/>

        <!-- 약관 동의 전체 영역 -->
        <LinearLayout
            android:id="@+id/layout_terms_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="40dp"
            app:layout_constraintTop_toBottomOf="@id/tv_info2">

            <!-- 전체 동의 -->
            <CheckBox
                android:id="@+id/cb_all_agree"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="서비스 약관 전체 동의"
                android:textColor="@color/text3"
                android:textAppearance="@style/TextAppearance.App.Medium.14sp"
                android:layout_marginBottom="10dp"
                android:buttonTint="@color/text5" />


            <!-- 서비스 이용약관 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <CheckBox
                    android:id="@+id/cb_service"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="[필수] 온에어메이트 서비스 이용약관"
                    android:textColor="@color/text4"
                    android:textAppearance="@style/TextAppearance.App.Medium.12sp"
                    android:buttonTint="@color/text5" />

                <ImageView
                    android:id="@+id/iv_arrow_service"
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:src="@drawable/ic_arrow"
                    android:contentDescription="서비스 약관 보기" />
            </LinearLayout>

            <!-- 개인정보 동의 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <CheckBox
                    android:id="@+id/cb_privacy"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="[필수] 개인정보 수집 및 이용"
                    android:textColor="@color/text4"
                    android:textAppearance="@style/TextAppearance.App.Medium.12sp"
                    android:buttonTint="@color/text5" />

                <ImageView
                    android:id="@+id/iv_arrow_privacy"
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:src="@drawable/ic_arrow"
                    android:contentDescription="개인정보 약관 보기" />
            </LinearLayout>

            <!-- 개인정보 처리방침 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <CheckBox
                    android:id="@+id/cb_privacy_process"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="[필수] 개인정보 처리방침"
                    android:textColor="@color/text4"
                    android:textAppearance="@style/TextAppearance.App.Medium.12sp"
                    android:buttonTint="@color/text5" />

                <ImageView
                    android:id="@+id/iv_arrow_processing"
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:src="@drawable/ic_arrow"
                    android:contentDescription="개인정보 처리방침 보기" />
            </LinearLayout>

            <!-- 마케팅 수신동의 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <CheckBox
                    android:id="@+id/cb_marketing"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="[선택] 마케팅 수신동의"
                    android:textColor="@color/text4"
                    android:textAppearance="@style/TextAppearance.App.Medium.12sp"
                    android:buttonTint="@color/text5" />

                <ImageView
                    android:id="@+id/iv_arrow_marketing"
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:src="@drawable/ic_arrow"
                    android:contentDescription="마케팅 약관 보기" />
            </LinearLayout>

            <!-- 이벤트/프로모션 참여 동의 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <CheckBox
                    android:id="@+id/cb_event"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="[선택] 이벤트/프로모션 참여 동의"
                    android:textColor="@color/text4"
                    android:textAppearance="@style/TextAppearance.App.Medium.12sp"
                    android:buttonTint="@color/text5" />

                <ImageView
                    android:id="@+id/iv_arrow_event"
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:src="@drawable/ic_arrow"
                    android:contentDescription="이벤트/프로모션 참여 약관 보기" />
            </LinearLayout>
        </LinearLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_join"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginBottom="24dp"
        android:background="@drawable/background_enable_button"
        android:enabled="false"
        android:paddingVertical="10dp"
        android:text="완료"
        android:textAppearance="@style/TextAppearance.App.SemiBold.14sp"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>