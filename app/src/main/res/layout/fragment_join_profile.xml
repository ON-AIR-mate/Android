<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingHorizontal="30dp">


    <RelativeLayout
        android:id="@+id/layout_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/btn_close"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/btn_close"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="10dp"/>

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ON AIR mate"
            android:textColor="@color/main"
            android:textAppearance="@style/TextAppearance.App.Bold.26sp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true" />
    </RelativeLayout>


    <TextView
        android:id="@+id/tv_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="계정 생성을 위한 정보를 입력해주세요."
        android:textAppearance="@style/TextAppearance.App.SemiBold.18sp"
        android:textColor="@color/black"
        android:layout_marginTop="45dp"
        app:layout_constraintTop_toBottomOf="@id/layout_header"
        app:layout_constraintStart_toStartOf="parent"/>


        <ImageView
            android:id="@+id/iv_profile"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/profile"
            android:layout_marginTop="30dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_info"
            />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_profile_select"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="프로필 사진 선택"
            android:paddingHorizontal="14dp"
            android:background="@drawable/background_box_5dp"
            android:backgroundTint="@color/input"
            android:layout_marginTop="26dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/iv_profile"/>

        <TextView
            android:id="@+id/tv_nickname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="닉네임"
            android:textColor="@color/text3"
            android:textAppearance="@style/TextAppearance.App.Medium.12sp"
            app:layout_constraintTop_toBottomOf="@id/btn_profile_select"/>



        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/et_nickname"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:background="@drawable/background_box_5dp"
            android:hint="3~10자 이내로 입력해 주세요"
            android:textAppearance="@style/TextAppearance.App.Medium.14sp"
            android:textColorHint="@color/text4"
            android:maxLines="1"
            android:inputType="text"
            android:imeOptions="actionDone"
            android:padding="12dp"
            android:layout_marginTop="6dp"
            android:layout_marginEnd="15dp"
            app:layout_constraintTop_toBottomOf="@id/tv_nickname"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/tv_nickname_status"/>

        <TextView
            android:id="@+id/tv_nickname_status"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="중복확인"
            android:textAppearance="@style/TextAppearance.App.Medium.14sp"
            android:textColor="@color/main"
            android:gravity="center"
            android:padding="6dp"
            app:layout_constraintTop_toTopOf="@id/et_nickname"
            app:layout_constraintStart_toEndOf="@id/et_nickname"
            app:layout_constraintEnd_toEndOf="parent"/>
        <!-- 닉네임 가이드 메시지 -->
        <TextView
            android:id="@+id/tv_nickname_guide"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="사용할 수 없는 닉네임입니다."
            android:textColor="@color/main"
            android:textAppearance="@style/TextAppearance.App.Medium.10sp"
            android:layout_marginBottom="12dp"
            android:visibility="visible"
            app:layout_constraintStart_toStartOf="@id/tv_nickname"
            app:layout_constraintTop_toBottomOf="@id/et_nickname"/>

    <TextView
        android:id="@+id/tv_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="아이디"
        android:textColor="@color/text3"
        android:textAppearance="@style/TextAppearance.App.Medium.12sp"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@id/tv_nickname_guide" />


    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/et_id"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/background_box_5dp"
        android:hint="아이디"
        android:textColorHint="@color/text4"
        android:textAppearance="@style/TextAppearance.App.Medium.14sp"
        android:maxLines="1"
        android:inputType="text"
        android:imeOptions="actionDone"
        android:padding="12dp"
        android:layout_marginTop="6dp"
        android:layout_marginEnd="15dp"
        app:layout_constraintTop_toBottomOf="@id/tv_id" />

    <!-- 닉네임 가이드 메시지 -->
    <TextView
        android:id="@+id/tv_id_guide"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="사용할 수 없는 닉네임입니다."
        android:textColor="@color/main"
        android:textAppearance="@style/TextAppearance.App.Medium.10sp"
        android:layout_marginBottom="12dp"
        android:visibility="visible"
        app:layout_constraintStart_toStartOf="@id/tv_id"
        app:layout_constraintTop_toBottomOf="@id/et_id"/>


    <TextView
        android:id="@+id/tv_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="비밀번호"
        android:textColor="@color/text3"
        android:textAppearance="@style/TextAppearance.App.Medium.12sp"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@id/tv_id_guide" />


    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/et_password"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/background_box_5dp"
        android:hint="비밀번호"
        android:textColorHint="@color/text4"
        android:textAppearance="@style/TextAppearance.App.Medium.14sp"
        android:maxLines="1"
        android:inputType="text"
        android:imeOptions="actionDone"
        android:padding="12dp"
        android:layout_marginTop="6dp"
        android:layout_marginEnd="15dp"
        app:layout_constraintTop_toBottomOf="@id/tv_password" />

    <!-- 닉네임 가이드 메시지 -->
    <TextView
        android:id="@+id/tv_password_guide"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="사용할 수 없는 닉네임입니다."
        android:textColor="@color/main"
        android:textAppearance="@style/TextAppearance.App.Medium.10sp"
        android:layout_marginBottom="12dp"
        android:visibility="visible"
        app:layout_constraintStart_toStartOf="@id/tv_password"
        app:layout_constraintTop_toBottomOf="@id/et_password"/>
        <!-- 완료 버튼 -->
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_join"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="300dp"
        android:paddingVertical="12dp"
        android:background="@drawable/bg_btn_main"
        android:text="완료"
        android:textColor="@color/white"
        android:textAppearance="@style/TextAppearance.App.SemiBold.14sp"

        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="45dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>