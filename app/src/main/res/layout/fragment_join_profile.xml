<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:id="@+id/layoutscroll">

    <LinearLayout
        android:id="@+id/fragment_container"
        android:orientation="vertical"
        android:padding="24dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- 타이틀 영역 -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp">

            <ImageView
                android:id="@+id/btnClose"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/btn_close"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true" />

            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ON AIR mate"
                android:textColor="@color/main"
                android:textSize="28sp"
                android:textStyle="bold"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true" />
        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="계정 생성을 위한 정보를 입력해주세요."
            android:layout_gravity="center_horizontal"
            android:textSize="16sp"
            android:layout_marginBottom="16dp" />

        <ImageView
            android:id="@+id/ivProfile"
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:src="@drawable/profile"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="8dp" />

        <Button
            android:id="@+id/btnProfileSelect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="프로필 사진 선택"
            android:textAppearance="@style/TextAppearance.App.Regular.14sp"
            android:backgroundTint="@color/input"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="24dp" />

        <!-- 닉네임 + 중복확인 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="4dp">

            <EditText
                android:id="@+id/etNickname"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:hint="3~10자 이내로 입력해 주세요"
                android:backgroundTint="@color/input"
                android:padding="12dp" />

            <TextView
                android:id="@+id/tvNicknameStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="중복확인"
                android:textColor="@color/main"
                android:gravity="center_vertical"
                android:paddingStart="12dp"
                android:paddingEnd="8dp"
                android:textSize="14sp"
                android:layout_gravity="center_vertical"/>

        </LinearLayout>

        <!-- 닉네임 가이드 메시지 -->
        <TextView
            android:id="@+id/tvNicknameGuide"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="사용할 수 없는 닉네임입니다."
            android:textColor="@color/main"
            android:textSize="12sp"
            android:layout_marginBottom="12dp"
            android:visibility="gone" />

        <!-- 아이디 -->
        <EditText
            android:id="@+id/etId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="아이디"
            android:padding="12dp"
            android:backgroundTint="@color/input"/>

        <TextView
            android:id="@+id/tvIdGuide"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="사용할 수 없는 아이디입니다."
            android:textColor="@color/main"
            android:textSize="12sp"
            android:layout_marginBottom="12dp"
            android:visibility="gone" />

        <!-- 비밀번호 -->
        <EditText
            android:id="@+id/etPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="비밀번호"
            android:padding="12dp"
            android:inputType="textPassword"
            android:backgroundTint="@color/input"/>

        <TextView
            android:id="@+id/tvPasswordGuide"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="8~16자의 영문 대/소문자, 숫자, 특수문자를 사용해주세요."
            android:textColor="@color/main"
            android:textSize="12sp"
            android:layout_marginBottom="24dp"
            android:visibility="gone" />

    </LinearLayout>

    <!-- 완료 버튼 -->
    <Button
        android:id="@+id/btnComplete"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="완료"
        android:background="@drawable/bg_btn_disabled"
        android:textColor="@android:color/white"
        android:enabled="false"
        android:padding="12dp" />
</ScrollView>