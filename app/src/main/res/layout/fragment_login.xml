<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activityLoginLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <!-- 로그인 관련 UI 전체를 LinearLayout으로 묶음 -->
    <LinearLayout
        android:id="@+id/loginContent"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:paddingStart="24dp"
        android:paddingEnd="24dp">

        <!-- 상단 탭 -->
        <com.google.android.material.tabs.TabLayout
            android:id="@+id/tabLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            app:tabIndicatorColor="@color/main"
            app:tabSelectedTextColor="@color/main"
            app:tabTextColor="@color/text6" />

        <!-- 슬라이드 영역 -->
        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/viewPager"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:layout_marginTop="4dp" />

        <!-- 소개 문구 -->
        <TextView
            android:id="@+id/tvIntro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Youtube 콘텐츠를 원하는 사람들과 함께\n더욱 더 재미있게 즐겨보세요!"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textAlignment="center"
            android:gravity="center"
            android:layout_marginTop="40dp" />

        <!-- 아이디 입력 -->
        <EditText
            android:id="@+id/etId"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:hint="아이디"
            android:background="@drawable/background_input_text"
            android:paddingHorizontal="16dp"
            android:paddingVertical="12dp"
            android:textColor="@color/black"
            android:textColorHint="@color/text4"
            android:layout_marginTop="24dp" />

        <!-- 비밀번호 입력 -->
        <EditText
            android:id="@+id/etPassword"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:hint="비밀번호"
            android:background="@drawable/background_input_text"
            android:paddingHorizontal="16dp"
            android:paddingVertical="12dp"
            android:inputType="textPassword"
            android:textColor="@color/black"
            android:textColorHint="@color/text4"
            android:layout_marginTop="12dp" />

        <!-- 로그인 상태 유지 체크박스 -->
        <LinearLayout
            android:id="@+id/keepLoginLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp">

            <CheckBox
                android:id="@+id/cbKeepLogin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:buttonTint="@color/disable"
                android:focusable="false"
                android:focusableInTouchMode="false" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="로그인 상태 유지"
                android:textColor="@color/text3"
                android:textSize="14sp" />
        </LinearLayout>

        <!-- 로그인 버튼 -->
        <Button
            android:id="@+id/btnLogin"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="로그인"
            android:enabled="false"
            android:textColor="@color/white"
            android:backgroundTint="@color/disable"
            android:background="@drawable/round_btn"
            android:layout_marginTop="20dp" />

        <!-- 하단 링크 -->
        <LinearLayout
            android:id="@+id/bottomLinks"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="32dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="아이디 찾기"
                android:textColor="@color/text4"
                android:textAppearance="@style/TextAppearance.App.Regular.12sp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="  |  "
                android:textColor="@color/text4"
                android:textAppearance="@style/TextAppearance.App.Regular.12sp"
                android:layout_marginLeft="14dp"
                android:layout_marginRight="14dp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="비밀번호 찾기"
                android:textColor="@color/text4"
                android:textAppearance="@style/TextAppearance.App.Regular.12sp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="  |  "
                android:textColor="@color/text4"
                android:textAppearance="@style/TextAppearance.App.Regular.12sp"
                android:layout_marginLeft="14dp"
                android:layout_marginRight="14dp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/newprofile"
                android:text="회원가입"
                android:textColor="@color/text4"
                android:textAppearance="@style/TextAppearance.App.Regular.12sp" />
        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>