<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="umc.onairmate.ui.lounge.LoungeFragment">

    <!-- 전체 상단 영역 -->
    <LinearLayout
        android:id="@+id/loungeHeaderLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingHorizontal="16dp"
        android:paddingTop="24dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- 상단 타이틀 & 선물 아이콘 -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/loungeTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="My Lounge"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="#000000" />

            <ImageButton
                android:id="@+id/giftButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:background="@null"
                android:src="@drawable/ic_gift"
                android:contentDescription="선물 아이콘" />
        </RelativeLayout>

        <TextView
            android:id="@+id/loungeSubText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="모든 콘텐츠는 Youtube API를 통해 불러옵니다."
            android:textSize="12sp"
            android:textColor="#666666" />

        <!-- 탭 버튼 -->
        <LinearLayout
            android:id="@+id/filterTabLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:orientation="horizontal"
            android:gravity="center"
            android:weightSum="2">

            <Button
                android:id="@+id/btnAllList"
                style="@style/TextAppearance.App.Medium.14sp"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:background="@drawable/frame_7461"
                android:text="전체 목록"
                android:textColor="@color/white" />

            <Button
                android:id="@+id/btnCollectionList"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:background="@drawable/frame_7464"
                android:text="컬렉션별 목록"
                android:textColor="@color/text5"
                style="@style/TextAppearance.App.Medium.14sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/bookmarkTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="정리되지 않은 북마크"
            android:textColor="@color/black"
            style="style/TextAppearance.App.Medium.12sp"
            android:layout_marginTop="16dp"/>


    </LinearLayout>

    <!-- 북마크 리스트 -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/bookmarkRecyclerView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="visible"
        app:layout_constraintTop_toBottomOf="@id/loungeHeaderLayout"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- 콘텐츠 표시 영역 -->
    <FrameLayout
        android:id="@+id/loungeContentContainer"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/loungeHeaderLayout"
        app:layout_constraintBottom_toTopOf="@+id/bottomNavigationView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- 하단 네비게이션 -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavigationView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:background="?android:attr/windowBackground"
        app:itemIconTint="@color/bottom_nav_icon_tint"
        app:itemTextColor="@color/bottom_nav_icon_tint"
        app:menu="@menu/bottom_navigation_menu"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
