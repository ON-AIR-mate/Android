<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:paddingHorizontal="40dp">

    <!-- 상단 타이틀 -->
    <LinearLayout
        android:id="@+id/layout_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ON AIR mate"
            android:textColor="@color/main"
            android:textAppearance="@style/TextAppearance.App.Bold.26sp" />
    </LinearLayout>

    <!-- 뒤로가기 버튼 -->
    <ImageView
        android:id="@+id/btnBack"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/ic_back_arrow"
        android:contentDescription="뒤로가기"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@id/layout_title"
        app:layout_constraintStart_toStartOf="parent"/>

    <!-- 섹션 타이틀 -->
    <TextView
        android:id="@+id/sectionTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="개인정보"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@+id/btnBack"
        app:layout_constraintStart_toStartOf="parent"
       />

    <!-- 프로필 이미지 -->
    <ImageView
        android:id="@+id/profileImage"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/ic_empty_profile"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/sectionTitle"
        app:layout_constraintStart_toStartOf="parent"/>

    <!-- 닉네임 텍스트 -->
    <LinearLayout
        android:id="@+id/layout_nickname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/profileImage">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:text="닉네임"
            android:textAppearance="@style/TextAppearance.App.Regular.14sp"/>

        <TextView
            android:id="@+id/tv_nickname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="[사용자 닉네임]"
            android:textColor="@color/black"
            android:textSize="14sp"
            app:layout_constraintStart_toEndOf="@+id/nicknameTitle"
            app:layout_constraintTop_toTopOf="@+id/nicknameTitle" />

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"/>
        <TextView
            android:id="@+id/btn_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/background_box_3dp"
            android:backgroundTint="@color/text5"
            android:text="수정하기"
            android:textColor="@color/white"
            android:textAppearance="@style/TextAppearance.App.Medium.12sp"
            android:padding="2dp" />
    </LinearLayout>

    <!-- 인기도 -->
    <LinearLayout
        android:id="@+id/layout_popularity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="16dp"
        android:gravity="center_vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/layout_nickname">

        <TextView
            android:id="@+id/popularityTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="인기도"
            android:textColor="@color/black"
            android:layout_marginEnd="16dp"
            android:textAppearance="@style/TextAppearance.App.Regular.14sp"/>

        <ImageView
            android:id="@+id/popularityIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_popular"
            android:layout_marginEnd="12dp"/>

        <TextView
            android:id="@+id/tv_popularity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="48dp"
            android:text="***점"
            android:textAppearance="@style/TextAppearance.App.Regular.12sp"
            android:gravity="end|center_vertical" />
        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"/>

        <ImageView
            android:id="@+id/iv_popularity_help"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:src="@drawable/ic_question"
            app:layout_constraintTop_toTopOf="@+id/popularityTitle"
            app:layout_constraintStart_toEndOf="@+id/popularityValue"
            android:layout_marginStart="4dp"/>
    </LinearLayout>

    <!-- 알림 설정들 -->
    <LinearLayout
        android:id="@+id/layout_alarm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/layout_popularity">

        <TextView
            android:id="@+id/serviceNotify"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="서비스 알림 수신 설정"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/layout_popularity"
            app:layout_constraintStart_toStartOf="@+id/profileImage"/>

        <Switch
            android:id="@+id/switchService"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dp"
            android:checked="true"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/serviceNotify" />

        <TextView
            android:id="@+id/adNotify"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="광고성 정보 수신 설정"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/serviceNotify"
            app:layout_constraintStart_toStartOf="@+id/serviceNotify"/>

        <Switch
            android:id="@+id/switchAd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="false"
            app:layout_constraintTop_toTopOf="@+id/adNotify"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="20dp"/>

        <TextView
            android:id="@+id/nightNotify"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="야간 알림 수신 설정 (21:00 ~ 08:00)"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/adNotify"
            app:layout_constraintStart_toStartOf="@+id/serviceNotify"/>

        <Switch
            android:id="@+id/switchNight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="false"
            app:layout_constraintTop_toTopOf="@+id/nightNotify"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="20dp"/>
    </LinearLayout>


    <!-- 앱 로고 및 문구 -->
    <ImageView
        android:id="@+id/appName"
        android:layout_width="254dp"
        android:layout_height="156dp"
        android:src="@drawable/ic_onairmate_logo_bottom"
        android:layout_marginTop="70dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/layout_alarm" />

    <!-- 로그아웃 버튼 -->
    <Button
        android:id="@+id/btnLogout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="로그아웃"
        android:textColor="@color/black"
        android:backgroundTint="@color/input"
        android:textSize="14sp"
        app:layout_constraintTop_toBottomOf="@+id/appName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>
