<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <!-- 앱 타이틀 -->
    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ON AIR mate"
        android:textColor="@color/main"
        android:textStyle="bold"
        android:textSize="24sp"
        android:layout_marginTop="24dp"
        android:layout_marginStart="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <!-- 검색 아이콘 -->
    <ImageView
        android:id="@+id/btnSearch"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/ic_search"
        android:contentDescription="검색"
        app:layout_constraintTop_toTopOf="@+id/title"
        app:layout_constraintEnd_toStartOf="@+id/btnAlarm"
        android:layout_marginEnd="12dp"/>

    <!-- 알림 아이콘 -->
    <ImageView
        android:id="@+id/btnAlarm"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/ic_alarm_off"
        android:contentDescription="알림"
        app:layout_constraintTop_toTopOf="@+id/title"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="20dp"/>

    <!-- 뒤로가기 버튼 -->
    <ImageView
        android:id="@+id/btnBack"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/ic_back"
        android:contentDescription="뒤로가기"
        android:layout_marginTop="12dp"
        android:layout_marginStart="20dp"
        app:layout_constraintTop_toBottomOf="@+id/title"
        app:layout_constraintStart_toStartOf="parent"/>

    <!-- 섹션 타이틀 -->
    <TextView
        android:id="@+id/sectionTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="개인정보"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@+id/btnBack"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="20dp"/>

    <!-- 프로필 이미지 -->
    <ImageView
        android:id="@+id/profileImage"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/profile"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        app:layout_constraintTop_toBottomOf="@+id/sectionTitle"
        app:layout_constraintStart_toStartOf="parent"/>

    <!-- 닉네임 텍스트 -->
    <LinearLayout
        android:id="@+id/layout_nickname"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/profileImage">

        <TextView
            android:id="@+id/nicknameTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="닉네임"
            android:textColor="@color/black"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/nicknameValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="[사용자 닉네임]"
            android:textColor="@color/black"
            android:textSize="14sp"
            app:layout_constraintStart_toEndOf="@+id/nicknameTitle"
            app:layout_constraintTop_toTopOf="@+id/nicknameTitle" />

        <!-- 수정하기 버튼 -->
        <Button
            android:id="@+id/btnEdit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:backgroundTint="@color/input"
            android:text="수정하기"
            android:textColor="@color/black"
            android:textSize="12sp"
            app:layout_constraintStart_toStartOf="@+id/nicknameValue"
            app:layout_constraintTop_toBottomOf="@+id/nicknameValue" />
    </LinearLayout>

    <!-- 인기도 -->
    <LinearLayout
        android:id="@+id/layout_popularity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginStart="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/layout_nickname">

        <TextView
            android:id="@+id/popularityTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="인기도"
            android:textColor="@color/black"
            android:textSize="14sp"
            app:layout_constraintTop_toBottomOf="@+id/profileImage"
            app:layout_constraintStart_toStartOf="@+id/profileImage"
            android:layout_marginTop="16dp"/>

        <ImageView
            android:id="@+id/popularityIcon"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_popular"
            app:layout_constraintTop_toTopOf="@+id/popularityTitle"
            app:layout_constraintStart_toEndOf="@+id/popularityTitle"
            android:layout_marginStart="8dp"/>

        <TextView
            android:id="@+id/popularityValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="***점"
            android:textColor="@color/black"
            android:textSize="14sp"
            app:layout_constraintTop_toTopOf="@+id/popularityTitle"
            app:layout_constraintStart_toEndOf="@+id/popularityIcon"
            android:layout_marginStart="4dp"/>

        <ImageView
            android:id="@+id/popularityHelp"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:src="@drawable/ic_question"
            app:layout_constraintTop_toTopOf="@+id/popularityTitle"
            app:layout_constraintStart_toEndOf="@+id/popularityValue"
            android:layout_marginStart="4dp"/>
    </LinearLayout>

    <!-- 알림 설정들 -->
    <LinearLayout
        android:id="@+id/layout_alarm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginStart="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/layout_popularity">

        <TextView
            android:id="@+id/serviceNotify"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="서비스 알림 수신 설정"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/layout_popularity"
            app:layout_constraintStart_toStartOf="@+id/profileImage"/>

        <Switch
            android:id="@+id/switchService"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dp"
            android:checked="true"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/serviceNotify" />

        <TextView
            android:id="@+id/adNotify"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="광고성 정보 수신 설정"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/serviceNotify"
            app:layout_constraintStart_toStartOf="@+id/serviceNotify"/>

        <Switch
            android:id="@+id/switchAd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="false"
            app:layout_constraintTop_toTopOf="@+id/adNotify"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="20dp"/>

        <TextView
            android:id="@+id/nightNotify"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="야간 알림 수신 설정 (21:00 ~ 08:00)"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/adNotify"
            app:layout_constraintStart_toStartOf="@+id/serviceNotify"/>

        <Switch
            android:id="@+id/switchNight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="false"
            app:layout_constraintTop_toTopOf="@+id/nightNotify"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="20dp"/>
    </LinearLayout>


    <!-- 앱 로고 및 문구 -->
    <ImageView
        android:id="@+id/appName"
        android:layout_width="254dp"
        android:layout_height="156dp"
        android:src="@drawable/ic_onairmate_logo_bottom"
        android:layout_marginTop="70dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/layout_alarm" />

    <!-- 로그아웃 버튼 -->
    <Button
        android:id="@+id/btnLogout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="로그아웃"
        android:textColor="@color/black"
        android:backgroundTint="@color/input"
        android:textSize="14sp"
        app:layout_constraintTop_toBottomOf="@+id/appName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>
