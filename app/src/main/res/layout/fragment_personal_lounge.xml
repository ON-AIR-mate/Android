<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".ui.lounge.LoungeFragment"
    android:layout_marginHorizontal="30dp"
    android:background="@color/white">
    <!-- tools:context 이거 삭제? -->

    <!-- 전체 상단 영역 -->
    <LinearLayout
        android:id="@+id/loungeHeaderLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- 상단 타이틀 & 선물 아이콘 -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/personalloungeTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="[닉네임]'s Lounge"
                android:textAppearance="@style/TextAppearance.App.Bold.24sp" />

            <ImageButton
                android:id="@+id/giftButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:background="@null"
                android:src="@drawable/ic_gift"
                android:contentDescription="선물 아이콘" />
        </RelativeLayout>

        <TextView
            android:id="@+id/loungeSubText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="@string/info_youtube_api"
            android:textColor="@color/text4"
            android:textAppearance="@style/TextAppearance.App.Regular.8sp"
            />

        <!-- 탭 버튼 -->
        <LinearLayout
            android:id="@+id/personal_list_select_buttons"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:orientation="horizontal"
            android:gravity="start" >


            <TextView
                android:id="@+id/personal_tv_collection_list"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingVertical="5dp"
                android:paddingHorizontal="12dp"
                android:background="@drawable/round_button_selector"
                android:text="컬렉션별 목록"
                android:textColor="@color/white"
                android:clickable="true"
                android:focusable="true"
                style="@style/TextAppearance.App.Medium.14sp" />
        </LinearLayout>

    </LinearLayout>

    <!--자식 프래그먼트(전체 목록, 컬렉션별 목록)가 들어갈 부분-->
    <LinearLayout
        android:id="@+id/progressbar"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:visibility="gone"
        android:gravity="center"
        android:background="@color/white"
        android:clickable="true"
        android:focusable="true"
        android:translationZ="1dp">
        <ProgressBar
            style="?android:attr/progressBarStyle"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:translationZ="1dp"
            android:indeterminateTint="@color/main"/>
    </LinearLayout>


    <!-- 컬렉션 리스트 -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_collections"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:visibility="visible"
        android:overScrollMode="never"
        android:nestedScrollingEnabled="false"
        app:layout_constraintTop_toBottomOf="@+id/loungeHeaderLayout"
        app:layout_constraintBottom_toTopOf="@id/cl_bottom"
        />


    <!-- 개별라운지 컬렉션 없음 뷰 -->
    <LinearLayout
        android:id="@+id/personal_lounge_emptyCollectionLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="24dp"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@+id/loungeHeaderLayout"
        app:layout_constraintBottom_toTopOf="@id/cl_bottom"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/ic_empty_collection" />

        <TextView
            android:layout_marginTop="16dp"
            android:text="[닉네임]의 컬렉션이 존재하지 않습니다."
            android:textAppearance="@style/TextAppearance.App.Medium.12sp"
            android:gravity="center"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <!-- 바텀뷰만큼 띄우기위한 코드입니다 -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_bottom"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        app:layout_constraintBottom_toBottomOf="parent" />



</androidx.constraintlayout.widget.ConstraintLayout>
