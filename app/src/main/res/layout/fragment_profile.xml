<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:layout_marginHorizontal="30dp">

    <!-- 상단 타이틀 -->
    <LinearLayout
        android:id="@+id/layout_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginStart="10dp"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ON AIR mate"
            android:textColor="@color/main"
            android:textAppearance="@style/TextAppearance.App.Bold.26sp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/info_youtube_api"
            android:textColor="@color/text4"
            android:textAppearance="@style/TextAppearance.App.Regular.8sp"/>
    </LinearLayout>

    <!-- 스크롤 뷰 -->
    <androidx.core.widget.NestedScrollView
        android:id="@+id/scroll_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintTop_toBottomOf="@id/layout_title"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:id="@+id/layout_scroll_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="20dp">

            <!-- 프로필 사진 -->
            <ImageView
                android:id="@+id/iv_profile"
                android:layout_width="96dp"
                android:layout_height="96dp"
                android:src="@drawable/ic_empty_profile"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="24dp" />

            <!-- 프로필 사진 변경 버튼 -->
            <Button
                android:id="@+id/btn_change_profile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="프로필 사진 변경"
                android:textSize="12sp"
                android:backgroundTint="@color/input"
                android:textColor="@color/black"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="8dp"/>

            <!-- 개인정보 -->
            <TextView
                android:id="@+id/tv_personal_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="개인정보"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_marginTop="24dp"
                android:layout_marginStart="20dp" />

            <!-- 닉네임 -->
            <LinearLayout
                android:id="@+id/layout_nickname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="16dp">

                <TextView
                    android:id="@+id/tv_nickname_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="닉네임"
                    android:textSize="14sp"
                    android:layout_marginStart="20dp"/>

                <TextView
                    android:id="@+id/tv_nickname_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="[사용자 닉네임]"
                    android:textSize="14sp"
                    android:layout_marginStart="30dp"/>
            </LinearLayout>

            <!-- 인기도 영역 -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/layout_popular"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginStart="12dp"
                android:layout_marginEnd="12dp">

                <!-- 왼쪽 콘텐츠 -->
                <LinearLayout
                    android:id="@+id/layout_popular_content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="12dp"
                    android:layout_marginStart="12dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent">

                    <TextView
                        android:id="@+id/tv_popular"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="인기도"
                        android:textSize="14sp"
                        android:layout_marginEnd="12dp" />

                    <ImageView
                        android:id="@+id/iv_popularity_icon"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_popular"
                        android:layout_marginEnd="12dp" />

                    <TextView
                        android:id="@+id/tv_popularity_score"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="***점"
                        android:textSize="14sp" />
                </LinearLayout>

                <!-- 툴팁 -->
                <ImageView
                    android:id="@+id/iv_tooltip"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/ic_question"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toBottomOf="@id/layout_popular_content"
                    android:layout_marginEnd="12dp" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <!-- 나의 활동 -->
            <TextView
                android:id="@+id/tv_my_activity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="나의 활동"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_marginTop="16dp"
                android:layout_marginStart="20dp"/>

            <!-- 참여한 방 -->
            <LinearLayout
                android:id="@+id/layout_my_rooms"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="참여한 방"
                    android:textSize="14sp"/>

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/ic_arrow"/>
            </LinearLayout>

            <!-- 차단 리스트 -->
            <LinearLayout
                android:id="@+id/layout_block"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="차단 리스트"
                    android:textSize="14sp"/>

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/ic_arrow"/>
            </LinearLayout>

            <!-- 의견 보내기 -->
            <LinearLayout
                android:id="@+id/layout_opinion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="의견 보내기"
                    android:textSize="14sp"/>

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/ic_arrow"/>
            </LinearLayout>

            <!-- 좋아한 컬렉션 -->
            <LinearLayout
                android:id="@+id/layout_like_collection"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="좋아한 컬렉션"
                    android:textSize="14sp"/>

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/ic_arrow"/>
            </LinearLayout>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
