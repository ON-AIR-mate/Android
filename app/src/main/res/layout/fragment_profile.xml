<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:layout_marginHorizontal="30dp">

    <!-- 상단 타이틀 -->
    <LinearLayout
        android:id="@+id/layout_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginStart="10dp"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ON AIR mate"
            android:textColor="@color/main"
            android:textAppearance="@style/TextAppearance.App.Bold.26sp" />

    </LinearLayout>

    <!-- 스크롤 뷰 -->
    <androidx.core.widget.NestedScrollView
        android:id="@+id/scroll_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintTop_toBottomOf="@id/layout_title"
        app:layout_constraintBottom_toTopOf="@id/cl_bottom">

        <LinearLayout
            android:id="@+id/layout_scroll_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="20dp">

            <!-- 프로필 사진 -->
            <ImageView
                android:id="@+id/iv_profile"
                android:layout_width="96dp"
                android:layout_height="96dp"
                android:src="@drawable/ic_empty_profile"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="24dp" />

            <!-- 프로필 사진 변경 버튼 -->
            <Button
                android:id="@+id/btn_change_profile"
                android:layout_width="wrap_content"
                android:layout_height="44dp"
                android:text="프로필 사진 변경"
                android:textSize="12sp"
                android:backgroundTint="@color/input"
                android:textColor="@color/black"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="8dp"/>

            <!-- 개인정보 -->
            <TextView
                android:id="@+id/tv_personal_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="개인정보"
                android:textAppearance="@style/TextAppearance.App.Medium.16sp"
                android:layout_marginTop="24dp"
                 />

            <!-- 닉네임 -->
            <LinearLayout
                android:id="@+id/layout_nickname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@id/profileImage">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="16dp"
                    android:text="닉네임"
                    android:textAppearance="@style/TextAppearance.App.Regular.14sp"/>

                <TextView
                    android:id="@+id/tv_nickname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text="[사용자 닉네임]"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    app:layout_constraintStart_toEndOf="@+id/nicknameTitle"
                    app:layout_constraintTop_toTopOf="@+id/nicknameTitle" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_popularity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="16dp"
                android:gravity="center_vertical"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/layout_nickname">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="인기도"
                    android:textColor="@color/black"
                    android:layout_marginEnd="16dp"
                    android:textAppearance="@style/TextAppearance.App.Regular.14sp"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_popular"
                    android:layout_marginEnd="12dp"/>

                <TextView
                    android:id="@+id/tv_popularity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minWidth="48dp"
                    android:text="***점"
                    android:textAppearance="@style/TextAppearance.App.Regular.12sp"
                    android:gravity="end|center_vertical" />
                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1"/>

                <ImageView
                    android:id="@+id/iv_popularity_help"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/ic_question"
                    app:layout_constraintTop_toTopOf="@+id/popularityTitle"
                    app:layout_constraintStart_toEndOf="@+id/popularityValue"
                    android:layout_marginStart="4dp"/>
            </LinearLayout>


            <TextView
                android:id="@+id/tv_my_activity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="나의 활동"
                android:textAppearance="@style/TextAppearance.App.Medium.16sp"
                android:layout_marginTop="24dp"
                />

            <!-- 참여한 방 -->
            <LinearLayout
                android:id="@+id/layout_my_rooms"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginVertical="5dp"
                android:paddingVertical="6dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="참여한 방"
                    android:textAppearance="@style/TextAppearance.App.Regular.14sp"/>

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/ic_arrow"/>
            </LinearLayout>

            <!-- 차단 리스트 -->
            <LinearLayout
                android:id="@+id/layout_block"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginVertical="5dp"
                android:paddingVertical="6dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="차단 리스트"
                    android:textAppearance="@style/TextAppearance.App.Regular.14sp"/>

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/ic_arrow"/>
            </LinearLayout>

            <!-- 의견 보내기 -->
            <LinearLayout
                android:id="@+id/layout_opinion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginVertical="5dp"
                android:paddingVertical="6dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="의견 보내기"
                    android:textAppearance="@style/TextAppearance.App.Regular.14sp"/>

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/ic_arrow"/>
            </LinearLayout>

            <!-- 좋아한 컬렉션 -->
            <LinearLayout
                android:id="@+id/layout_like_collection"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginVertical="5dp"
                android:paddingVertical="6dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="좋아한 컬렉션"
                    android:textAppearance="@style/TextAppearance.App.Regular.14sp"/>

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/ic_arrow"/>
            </LinearLayout>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_onairmate_logo_bottom"
                android:layout_gravity="center"
                android:layout_marginTop="70dp"
                android:layout_marginBottom="50dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="로그아웃"
                android:textColor="@color/text5"
                android:background="@drawable/background_logout"
                android:textAppearance="@style/TextAppearance.App.SemiBold.14sp"
                android:paddingHorizontal="10dp"
                android:paddingVertical="2dp"
                android:layout_marginBottom="50dp"
                android:layout_gravity="center_horizontal"/>
        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

    <!-- 바텀뷰만큼 띄우기위한 코드입니다 -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_bottom"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        app:layout_constraintBottom_toBottomOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>
