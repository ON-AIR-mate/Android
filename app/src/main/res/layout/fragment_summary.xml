<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginHorizontal="30dp"
    android:layout_marginVertical="13dp"
    android:orientation="vertical"
    tools:context=".ui.chat_room.summary.SummaryFragment">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="우리가 나눈 이야기"
        android:textAppearance="@style/TextAppearance.App.Bold.20sp"
        android:textColor="@color/black"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="AI로 한눈에 보기"
        android:textAppearance="@style/TextAppearance.App.Regular.12sp"
        android:textColor="@color/main"
        android:layout_marginBottom="15dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="방 제목"
        android:textAppearance="@style/TextAppearance.App.Medium.14sp"
        android:textColor="@color/black"
        android:layout_marginVertical="8dp"/>

    <TextView
        android:id="@+id/tv_room_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="(ENG) 찰스엔터의 광태업고 튀어"
        android:textAppearance="@style/TextAppearance.App.Regular.12sp"
        android:textColor="@color/black"
        android:layout_marginBottom="15dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="주제 요약"
        android:textAppearance="@style/TextAppearance.App.Medium.14sp"
        android:textColor="@color/black"
        android:layout_marginVertical="8dp"/>

    <TextView
        android:id="@+id/tv_summary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="오늘은 서로의 연애 경험을 나누며 공감하는 시간이었어요."
        android:textAppearance="@style/TextAppearance.App.Regular.12sp"
        android:textColor="@color/black"
        android:layout_marginBottom="15dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="감정 분석"
        android:textAppearance="@style/TextAppearance.App.Medium.14sp"
        android:textColor="@color/black"
        android:layout_marginVertical="8dp"/>

    <com.google.android.flexbox.FlexboxLayout
        android:id="@+id/fb_feelings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingHorizontal="16dp"
        app:alignItems="flex_start"
        app:flexWrap="wrap"
        app:justifyContent="flex_start" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="하이라이트"
        android:textAppearance="@style/TextAppearance.App.Medium.14sp"
        android:textColor="@color/black"
        android:layout_marginVertical="8dp"/>

    <LinearLayout
        android:id="@+id/ll_bookmark_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/tv_bookmark_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="16:23 ~~~~"
            android:textAppearance="@style/TextAppearance.App.Regular.12sp" />
        
    </LinearLayout>

    <LinearLayout
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:gravity="center">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_thumbs_up" />

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_thumbs_down"/>

    </LinearLayout>

    <TextView
        android:id="@+id/btn_left"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:background="@drawable/background_box_5dp"
        android:backgroundTint="@color/main"
        android:layout_gravity="center"
        android:text="확인"
        android:gravity="center"
        android:textAppearance="@style/TextAppearance.App.SemiBold.12sp"
        android:textColor="@color/white"
        android:layout_marginTop="20dp"
        android:paddingVertical="2dp" />


</LinearLayout>