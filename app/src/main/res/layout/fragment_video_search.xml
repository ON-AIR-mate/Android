<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.video.VideoSearchFragment"
    android:id="@+id/fragment_video_search"
    android:paddingHorizontal="30dp"
    android:clickable="true"
    android:focusable="true"
    android:background="@color/white">

    <LinearLayout
        android:id="@+id/layout_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginStart="10dp"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ON AIR mate"
            android:textColor="@color/main"
            android:textAppearance="@style/TextAppearance.App.Bold.26sp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/info_youtube_api"
            android:textColor="@color/text4"
            android:textAppearance="@style/TextAppearance.App.Regular.8sp"/>
    </LinearLayout>

    <ImageView
        android:id="@+id/iv_notification"
        android:layout_width="22dp"
        android:layout_height="22dp"
        android:src="@drawable/ic_bell"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <ImageView
        android:id="@+id/iv_youtube_search"
        android:layout_width="22dp"
        android:layout_height="22dp"
        android:src="@drawable/ic_door"
        android:layout_marginEnd="10dp"
        app:layout_constraintTop_toTopOf="@id/iv_notification"
        app:layout_constraintEnd_toStartOf="@id/iv_notification"/>

    <LinearLayout
        android:id="@+id/layout_search"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/background_input_text"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingHorizontal="10dp"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="18dp"
        app:layout_constraintTop_toBottomOf="@id/layout_title">

        <ImageView
            android:layout_width="13dp"
            android:layout_height="13dp"
            android:src="@drawable/ic_magnifier"/>

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/et_input_keyword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/video_search_hint"
            android:imeOptions="actionDone"
            android:textAppearance="@style/TextAppearance.App.Regular.14sp"
            android:textColorHint="@color/black"
            android:background="@null"
            android:singleLine="true"
            android:layout_marginStart="10dp"/>

    </LinearLayout>


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_contents"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/layout_search"
        app:layout_constraintBottom_toTopOf="@id/cl_bottom"/>

    <!-- 방 검색시 비어있는 경우 -->

    <!-- 바텀뷰만큼 띄우기위한 코드입니다 -->

    <LinearLayout
        android:id="@+id/layout_empty"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="visible"
        app:layout_constraintBottom_toTopOf="@id/cl_bottom"
        app:layout_constraintTop_toBottomOf="@id/layout_search"
        app:layout_constraintVertical_bias="0.602"
        tools:layout_editor_absoluteX="30dp">

        <ImageView
            android:id="@+id/iv_empty_image"
            android:layout_width="58dp"
            android:layout_height="58dp"
            android:layout_marginTop="66dp"
            android:src="@drawable/onairmate_logo" />

        <TextView
            android:id="@+id/tv_empty_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="13dp"
            android:layout_marginBottom="48dp"
            android:gravity="center"
            android:text="보고싶은 Youtube 영상을 검색하여\nmate들과 함께 감상을 시작해보세요!"
            android:textAppearance="@style/TextAppearance.App.Medium.14sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/iv_empty_image" />

    </LinearLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_bottom"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>