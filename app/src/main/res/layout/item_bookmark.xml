<!-- res/layout/item_bookmark.xml -->
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardElevation="2dp"
    app:cardCornerRadius="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/thumbnailImage"
            android:layout_width="135dp"
            android:layout_height="75.76dp"
            android:scaleType="centerCrop"
            android:src="@drawable/sample_image"
            android:contentDescription="sample_image" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginStart="12dp">

            <TextView
                android:id="@+id/titleText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="방 제목"
                android:textAppearance="@style/TextAppearance.App.Medium.12sp" />

            <TextView
                android:id="@+id/vidiotitleText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="영상제목"
                android:textAppearance="@style/TextAppearance.App.Medium.10sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="bottom|center_vertical"
                android:layout_marginTop="8dp">

                <TextView
                    android:id="@+id/timeText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="16:23 ~~~"
                    android:textAppearance="@style/TextAppearance.App.Regular.8sp"/>

                <View
                    android:layout_width="0dp"
                    android:layout_height="11dp"
                    android:layout_weight="1" />

                <ImageButton
                    android:id="@+id/moreButton"
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:src="@drawable/ic_more" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>
