<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:elevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- 썸네일 이미지 -->
        <ImageView
            android:id="@+id/ivThumbnail"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:scaleType="centerCrop"
            android:src="@drawable/sample_video"
            android:contentDescription="썸네일" />

        <!-- 텍스트/버튼 영역 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="12dp">

            <!-- 제목 + 알림개수 + 더보기 버튼 -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <!-- 제목 -->
                <TextView
                    android:id="@+id/tvTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="웃긴 장면"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_alignParentStart="true" />

                <!-- 알림 개수 (배지) -->
                <TextView
                    android:id="@+id/tvBadge"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="4"
                    android:textSize="12sp"
                    android:textColor="@android:color/white"
                    android:background="@drawable/bg_badge_pick"
                    android:paddingHorizontal="6dp"
                    android:paddingVertical="2dp"
                    android:layout_toEndOf="@id/tvTitle"
                    android:layout_marginStart="6dp"
                    android:layout_centerVertical="true" />


                <!-- 더보기 버튼 -->
                <ImageView
                    android:id="@+id/btnMore"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_more_vert"
                    android:layout_alignParentEnd="true"
                    android:contentDescription="더보기" />
            </RelativeLayout>

            <!-- 생성일 + 공개범위 -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp">

                <!-- 생성/수정일 -->
                <TextView
                    android:id="@+id/tvDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="생성일 : 2025.03.24\n마지막 수정일 : 2025.06.23"
                    android:textSize="13sp"
                    android:textColor="#888888"
                    android:layout_alignParentStart="true" />
                <TextView
                    android:id="@+id/tvOwner"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="[닉네임]"
                    android:textSize="12sp"
                    android:textColor="@color/disable" />

                <!-- 공개범위 -->
                <TextView
                    android:id="@+id/tvVisibility"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="전체 공개"
                    android:textSize="13sp"
                    android:textColor="#888888"
                    android:layout_alignParentEnd="true"
                    android:layout_alignBottom="@+id/tvDate" />

                <TextView
                    android:id="@+id/tvDescription"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="설명 내용입니다"
                    android:textSize="12sp"
                    android:visibility="gone"
                    android:paddingTop="4dp"
                    android:textColor="#666666" />

            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>
