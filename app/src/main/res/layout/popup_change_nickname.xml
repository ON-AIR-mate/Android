<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="340dp"
    android:layout_height="220dp"
    android:layout_gravity="center"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    android:paddingTop="15dp"
    android:paddingBottom="15dp"
    android:orientation="vertical"
    android:id="@+id/popup_change_nickname">

    <TextView
        android:layout_width="278dp"
        android:layout_height="17dp"
        android:text="닉네임 수정"
        android:textSize="14sp"
        android:textColor="@color/black"
        android:fontFamily="@font/pretendard_medium" />

    <LinearLayout
        android:id="@+id/layout_change_nickname"
        android:layout_width="278dp"
        android:layout_height="88dp"
        android:orientation="horizontal"
        android:layout_marginTop="17dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title_image">

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/pretendard_regular"
            android:text="닉네임"
            android:textSize="14sp"/>

        <LinearLayout
            android:id="@+id/layout_input_nickname"
            android:layout_width="180dp"
            android:layout_height="40dp"
            android:orientation="vertical">

            <EditText
                android:id="@+id/edit_nickname"
                android:layout_width="180dp"
                android:layout_height="20dp"
                android:background="@drawable/bg_input_edit_text"
                android:maxLines="1"
                android:textSize="14sp"
                android:layout_marginLeft="3dp"/>

            <TextView
                android:id="@+id/nickname_info"
                android:layout_width="180dp"
                android:layout_height="14dp"
                android:text="(3~10자 이내로 입력해주세요)"
                android:textSize="12sp"
                android:fontFamily="@font/pretendard_regular"
                android:layout_marginLeft="3dp"/>
        </LinearLayout>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/check_nickname"
            android:layout_width="50dp"
            android:layout_height="20dp"
            android:background="@drawable/bg_btn_disabled"
            android:gravity="center"
            android:text="중복 확인"
            android:textSize="12sp"
            android:fontFamily="@font/pretendard_medium"
            android:textColor="@color/white"
            android:layout_marginLeft="5dp"/>

    </LinearLayout>
    
    <LinearLayout
        android:layout_width="278dp"
        android:layout_height="24dp"
        android:orientation="vertical"
        android:layout_gravity="left">
        
        <TextView
            android:id="@+id/explain_shop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="*최소 1회 무료\n추가 변경권은 M:Shop 에서 구매 가능"
            android:textSize="10sp"
            android:fontFamily="@font/pretendard_medium"/>
    </LinearLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/cancel_create"
        android:layout_width="50dp"
        android:layout_height="20dp"
        android:background="@drawable/bg_btn_main"
        android:fontFamily="@font/pretendard_semi_bold"
        android:text="완료"
        android:textColor="@color/white"
        android:textSize="12sp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"/>

</LinearLayout>