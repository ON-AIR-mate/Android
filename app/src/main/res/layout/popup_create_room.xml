<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginHorizontal="30dp"
    android:paddingHorizontal="13dp"
    android:paddingVertical="24dp"
    android:background="@drawable/background_box_5dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="start"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="20dp">

            <TextView
                android:id="@+id/tv_video_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="영상 제목"
                android:textAppearance="@style/TextAppearance.App.Medium.14sp" />

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1"/>

            <ImageView
                android:id="@+id/iv_close"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:src="@drawable/btn_close"
                app:tint="@color/text3"
                android:layout_gravity="end|center_vertical" />

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="방 제목"
            android:layout_marginBottom="10dp"
            android:textAppearance="@style/TextAppearance.App.Medium.14sp" />

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/et_input_room_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.App.Regular.12sp"
            android:hint="방 제목을 입력하세요. (3~20자)"
            android:textColorHint="@color/black"
            android:background="@drawable/background_input_text"
            android:paddingVertical="5dp"
            android:paddingStart="5dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="start"
            android:layout_marginTop="14dp"
            android:layout_marginBottom="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="최대 인원"
                android:textAppearance="@style/TextAppearance.App.Medium.14sp" />

            <Spinner
                android:id="@+id/sp_maximum_participant"
                android:layout_width="130dp"
                android:layout_height="40dp"
                android:textAlignment="viewEnd"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="비공개 방"
                android:layout_weight="1"
                android:textAppearance="@style/TextAppearance.App.Medium.14sp" />

            <ImageView
                android:id="@+id/iv_private_room_on"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_switch_on"
                android:visibility="visible" />

            <ImageView
                android:id="@+id/iv_private_room_off"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_switch_off"
                android:visibility="gone" />

        </LinearLayout>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_ok"
            android:layout_width="150dp"
            android:layout_height="22dp"
            android:background="@drawable/background_box_5dp"
            android:backgroundTint="@color/main"
            android:text="ON AIR"
            android:textColor="@color/white"
            android:textAppearance="@style/TextAppearance.App.SemiBold.12sp"
            android:layout_gravity="center"
            android:layout_marginEnd="10dp"
            app:layout_constraintTop_toBottomOf="@id/tv_message"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/btn_cancel"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>