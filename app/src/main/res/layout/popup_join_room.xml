<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginHorizontal="30dp"
    android:paddingHorizontal="13dp"
    android:paddingVertical="24dp"
    android:background="@drawable/background_box_5dp">
    <LinearLayout
        android:id="@+id/layout_room_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="4dp"
        android:gravity="center_vertical"
        app:layout_constraintTop_toTopOf="parent">
        <ImageView
            android:id="@+id/iv_manager_profile"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:src="@drawable/ic_empty_profile"/>

        <TextView
            android:id="@+id/tv_manager_nickname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="방장 닉네임"
            android:textAppearance="@style/TextAppearance.App.Regular.12sp"
            android:layout_marginStart="8dp"/>
        <TextView
            android:id="@+id/tv_room_user_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="10 / 15명"
            android:layout_marginStart="14dp"
            android:textAppearance="@style/TextAppearance.App.Medium.12sp"/>
    </LinearLayout>
    <ImageView
        android:id="@+id/iv_thumbnail"
        android:layout_width="124dp"
        android:layout_height="70dp"
        android:src="@drawable/background_input_text"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/layout_room_info"
        app:layout_constraintStart_toStartOf="parent"/>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:gravity="center_vertical"
        android:paddingHorizontal="10dp"
        app:layout_constraintTop_toTopOf="@id/iv_thumbnail"
        app:layout_constraintBottom_toBottomOf="@id/iv_thumbnail"
        app:layout_constraintStart_toEndOf="@id/iv_thumbnail"
        app:layout_constraintEnd_toEndOf="parent">
        <TextView
            android:id="@+id/tv_play_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1:06:15"
            android:textAppearance="@style/TextAppearance.App.Medium.12sp" />
        <TextView
            android:id="@+id/tv_room_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="방 제목"
            android:textAppearance="@style/TextAppearance.App.Medium.18sp"
            android:layout_marginTop="3dp" />
    </LinearLayout>
    <TextView
        android:id="@+id/tv_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="15dp"
        android:text="방에 참여하시겠습니까?"
        android:gravity="center"
        android:textAppearance="@style/TextAppearance.App.Medium.14sp"
        app:layout_constraintTop_toBottomOf="@id/iv_thumbnail"
        app:layout_constraintBottom_toTopOf="@id/btn_ok"/>
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_ok"
        android:layout_width="100dp"
        android:layout_height="20dp"
        android:background="@drawable/background_box_5dp"
        android:backgroundTint="@color/main"
        android:text="확인"
        android:textColor="@color/white"
        android:textAppearance="@style/TextAppearance.App.SemiBold.12sp"
        app:layout_constraintHorizontal_chainStyle="packed"
        android:layout_marginEnd="10dp"
        app:layout_constraintTop_toBottomOf="@id/tv_message"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/btn_cancel"/>
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_cancel"
        android:layout_width="100dp"
        android:layout_height="20dp"
        android:background="@drawable/background_box_5dp"
        android:backgroundTint="@color/disable"
        android:text="취소"
        android:textColor="@color/white"
        android:textAppearance="@style/TextAppearance.App.SemiBold.12sp"
        app:layout_constraintTop_toTopOf="@id/btn_ok"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/btn_ok"/>

</androidx.constraintlayout.widget.ConstraintLayout>