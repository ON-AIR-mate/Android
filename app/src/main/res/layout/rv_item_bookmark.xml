<!-- res/layout/item_bookmark.xml -->
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="4dp"
    app:cardElevation="0dp"
    app:cardCornerRadius="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/iv_thumbnail"
            android:layout_width="100dp"
            android:layout_height="70dp"
            android:scaleType="centerCrop"
            android:src="@drawable/img" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginStart="12dp">

            <TextView
                android:id="@+id/tv_collection"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="컬렉션명"
                android:textAppearance="@style/TextAppearance.App.Regular.8sp"
                android:background="@drawable/outline_round_button"
                android:paddingHorizontal="6dp"
                android:paddingVertical="3dp"
                android:layout_marginBottom="2dp"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/tv_room_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="방 제목"
                android:layout_marginBottom="3dp"
                style="@style/TextAppearance.App.Medium.12sp"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/tv_video_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="영상제목"
                android:textAppearance="@style/TextAppearance.App.Medium.10sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="bottom|center_vertical"
                android:layout_marginTop="8dp">

                <TextView
                    android:id="@+id/tv_bookmark_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="16:23 ~~~~"
                    android:layout_weight="1"
                    android:textAppearance="@style/TextAppearance.App.Regular.10sp"
                    android:layout_marginRight="3dp"/>


                <ImageButton
                    android:id="@+id/btn_more"
                    android:layout_width="16dp"
                    android:layout_height="wrap_content"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:src="@drawable/ic_more" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>
