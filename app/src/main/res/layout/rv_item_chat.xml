<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <LinearLayout
        android:id="@+id/layout_user_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginTop="20dp">
        <ImageView
            android:id="@+id/iv_profile_left"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:src="@drawable/ic_empty_profile"/>

        <TextView
            android:id="@+id/tv_nickname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="닉네임"
            android:textAppearance="@style/TextAppearance.App.Regular.10sp"
            android:layout_marginHorizontal="8dp"/>
        <ImageView
            android:id="@+id/iv_profile_right"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:src="@drawable/ic_empty_profile" />
    </LinearLayout>
    <TextView
        android:id="@+id/tv_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxWidth="204dp"
        android:text="채팅 입력"
        android:textAppearance="@style/TextAppearance.App.Regular.12sp"
        android:gravity="center_vertical|start"
        android:background="@drawable/background_box_5dp"
        android:backgroundTint="@color/input"
        android:paddingVertical="6dp"
        android:paddingHorizontal="8dp"
        android:layout_marginVertical="5dp"
        android:layout_marginStart="26dp" />

</LinearLayout>