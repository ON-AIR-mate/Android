<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="7dp"
        android:paddingBottom="12dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        app:layout_constraintTop_toTopOf="parent">

        <!--유저 프로필 이미지 들어갈 자리-->
        <ImageView
            android:id="@+id/iv_user_profile"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_marginEnd="3dp"
            android:src="@drawable/ic_empty_profile"/>

        <TextView
            android:id="@+id/tv_user_tier"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:text="1"
            android:background="@drawable/bg_count_badge"
            android:backgroundTint="@color/disable"
            android:gravity="center"
            android:textAppearance="@style/TextAppearance.App.SemiBold.10sp"
            android:textColor="@android:color/white"
            android:layout_marginEnd="8dp"/>

        <!--닉네임 들어갈 자리-->
        <TextView
            android:id="@+id/tv_user_nickname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="참여자 닉네임"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_marginEnd="4dp"
            android:textAppearance="@style/TextAppearance.App.Regular.14sp"/>

        <ImageView
            android:id="@+id/iv_more"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:src="@drawable/ic_dots" />

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>