<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    card_view:cardCornerRadius="12dp"
    card_view:cardElevation="0dp"
    android:layout_marginVertical="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- 썸네일 -->
        <ImageView
            android:id="@+id/iv_thumbnail"
            android:layout_width="match_parent"
            android:layout_height="185dp"
            android:scaleType="centerCrop"
            android:background="@color/login"/>

        <!-- 내용 + 메뉴 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingHorizontal="12dp"
            android:paddingVertical="8dp"
            android:background="@color/text8">

            <!-- 왼쪽 정보 칼럼 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- 제목 + 뱃지 + 프라이버시 아이콘 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/tv_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:maxLines="1"
                        tools:text="웃긴 장면"
                        android:textAppearance="@style/TextAppearance.App.SemiBold.20sp" />

                    <TextView
                        android:id="@+id/tvCountBadge"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="6dp"
                        android:background="@drawable/bg_count_badge"
                        android:paddingHorizontal="6dp"
                        android:paddingVertical="2dp"
                        tools:text="45"
                        android:textAppearance="@style/TextAppearance.App.SemiBold.12sp"
                        android:textColor="@android:color/white" />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_weight="1" />

                    <ImageView
                        android:id="@+id/iv_more"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:padding="3dp"
                        android:src="@drawable/ic_more" />
                </LinearLayout>

                <!-- 생성일 -->
                <TextView
                    android:id="@+id/tv_generated_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    tools:text="생성일 : 2025.03.24"
                    android:textAppearance="@style/TextAppearance.App.Regular.10sp"
                    android:textColor="@color/text4" />

                <!-- 마지막 수정일(왼쪽) + 비공개(오른쪽) 같은 줄 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/tv_latest_modified_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="마지막 수정일 : 2025.06.23"
                        android:textAppearance="@style/TextAppearance.App.Regular.10sp"
                        android:textColor="@color/text4"/>

                    <View
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_weight="1" />

                    <TextView
                        android:id="@+id/tv_privacy"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="비공개"
                        android:textAppearance="@style/TextAppearance.App.Regular.10sp"
                        android:textColor="@color/text4" />
                </LinearLayout>
            </LinearLayout>

            <!-- 메뉴 아이콘 -->

        </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>
