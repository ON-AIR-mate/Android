<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_marginStart="26dp"
        android:paddingVertical="15dp">
        <ImageView
            android:id="@+id/iv_thumbnail"
            android:layout_width="0dp"
            android:layout_height="54dp"
            app:layout_constraintWidth_percent="0.35"
            android:src="@drawable/background_input_text"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <LinearLayout
            android:id="@+id/layout_play_time"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_marginHorizontal="6dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf = "@id/iv_thumbnail"
            app:layout_constraintEnd_toEndOf="parent"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="6dp"
                android:layout_height="8dp"
                android:src="@drawable/ic_playtime"/>
            <TextView
                android:id="@+id/tv_play_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1:06:15"
                android:textAppearance="@style/TextAppearance.App.Medium.8sp"
                android:layout_marginStart="5dp"/>
            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1"/>
            <TextView
                android:id="@+id/tv_room_user_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10 / 15명"
                android:textAppearance="@style/TextAppearance.App.Medium.8sp"/>
        </LinearLayout>
        <TextView
            android:id="@+id/tv_room_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="방 제목"
            android:textAppearance="@style/TextAppearance.App.Medium.8sp"
            android:layout_marginHorizontal="6dp"
            android:layout_marginTop="3dp"
            app:layout_constraintTop_toBottomOf="@id/layout_play_time"
            app:layout_constraintStart_toEndOf = "@id/iv_thumbnail"
            app:layout_constraintEnd_toEndOf="parent"/>

        <LinearLayout
            android:id="@+id/layout_room_info"
            android:layout_width="0dp"
            android:layout_height="18dp"
            android:gravity="center_vertical"
            android:layout_marginHorizontal="6dp"
            android:layout_marginVertical="4dp"
            app:layout_constraintTop_toBottomOf="@id/tv_room_name"
            app:layout_constraintBottom_toBottomOf= "parent"
            app:layout_constraintStart_toEndOf = "@id/iv_thumbnail"
            app:layout_constraintEnd_toEndOf="parent"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/iv_manager_profile"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:layout_marginEnd="2dp"
                android:src="@drawable/ic_empty_profile"/>

            <TextView
                android:id="@+id/tv_manager_popularity"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:text="1"
                android:background="@drawable/bg_count_badge"
                android:backgroundTint="@color/disable"
                android:gravity="center"
                android:textAppearance="@style/TextAppearance.App.SemiBold.6sp"
                android:textColor="@android:color/white" />

            <TextView
                android:id="@+id/tv_manager_nickname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="방장 닉네임"
                android:textAppearance="@style/TextAppearance.App.Regular.8sp"
                android:layout_marginStart="3dp"/>

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>