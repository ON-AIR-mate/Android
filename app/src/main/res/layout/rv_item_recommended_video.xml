<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingEnd="6dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"

   >
    <ImageView
        android:id="@+id/iv_thumbnail"
        android:layout_width="120dp"
        android:layout_height="68dp"
        android:src="@drawable/background_box_5dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <LinearLayout
        android:id="@+id/layout_play_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/background_box_1dp"
        android:backgroundTint="#4DFFFFFF"
        android:layout_marginEnd="5dp"
        android:layout_marginTop="2dp"
        android:paddingHorizontal="5dp"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="10dp"
            android:src="@drawable/ic_playtime"
            app:tint="@color/text2"
            android:padding="1dp"/>

        <TextView
            android:id="@+id/tv_play_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1:06:15"
            android:textAppearance="@style/TextAppearance.App.Medium.8sp"
            android:textColor="@color/text2"
            android:gravity="center"/>

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>