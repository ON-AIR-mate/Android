<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/fragment_container">

    <fragment
        android:id="@+id/collectionListFragment"
        android:name="umc.onairmate.ui.lounge.CollectionListFragment"
        android:label="컬렉션 목록"
        tools:layout="@layout/fragment_collection_list">
        <action
            android:id="@+id/action_collectionListFragment_to_collectionDetailFragment"
            app:destination="@id/collectionDetailFragment" />
    </fragment>

    <fragment
        android:id="@+id/collectionDetailFragment"
        android:name="umc.onairmate.ui.lounge.CollectionDetailFragment"
        tools:layout="@layout/fragment_collection_detail">

        <argument
            android:name="collectionData"
            app:argType="umc.onairmate.data.model.entity.CollectionData" />
    </fragment>

    <fragment
        android:id="@+id/HowToUseFragment"
        android:name="umc.onairmate.ui.join.HowToUseFragment">

        <action
            android:id="@+id/action_howToUseFragment_to_loginActivity"
            app:destination="@id/fragment_container"/>

    </fragment>

    <fragment
        android:id="@+id/joinFragment"
        android:name="umc.onairmate.ui.join.JoinFragment" >

        <action
            android:id="@+id/action_joinFragment_to_joinProfileFragment"
            app:destination="@id/joinProfileFragment" />
    </fragment>

    <fragment
        android:id="@+id/joinProfileFragment"
        android:name="umc.onairmate.ui.join.JoinProfileFragment"
        android:label="JoinProfileFragment"
        tools:layout="@layout/fragment_join_profile" />
</navigation>